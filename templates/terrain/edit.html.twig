{% extends 'base.html.twig' %}

{% block title %}Modifier le terrain - {{ terrain.name }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-r from-blue-50 to-purple-50 p-8">
        <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-6">
            <!-- Titre -->
            <h1 class="text-3xl font-bold text-blue-900 mb-6 flex items-center">
                <i class="fas fa-edit text-blue-500 mr-2"></i> Modifier le terrain : {{ terrain.name }}
            </h1>

            <!-- Formulaire -->
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

                <div class="space-y-4">
                    {{ form_row(form.name, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                    {{ form_row(form.adresse, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                    {{ form_row(form.surface, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                    {{ form_row(form.prix, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                    {{ form_row(form.imageFile, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                </div>

                <button type="submit" 
                        class="w-full bg-yellow-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300 flex items-center justify-center">
                    <i class="fas fa-save mr-2"></i> Modifier
                </button>
            
            {{ form_end(form) }}

            <!-- Bouton Retour -->
            <div class="mt-6">
                <a href="{{ path('app_user_dashboard') }}" 
                   class="w-full inline-block bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-600 transition duration-300 flex items-center justify-center">
                    <i class="fas fa-arrow-left mr-2"></i> Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>
{% endblock %}
