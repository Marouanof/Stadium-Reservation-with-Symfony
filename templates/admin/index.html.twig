{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-indigo-50 to-purple-50">
    <div class="bg-white p-8 rounded-lg shadow-lg text-center w-full max-w-lg">
        
        <!-- Titre du tableau de bord -->
        <h1 class="text-3xl font-bold text-blue-700 mb-4">Tableau de bord Admin</h1>
        <p class="text-lg text-gray-600 mb-8">Bienvenue, administrateur !</p>

        <div class="space-y-6">
            <!-- Gérer les utilisateurs -->
            <a href="{{ path('app_admin_users') }}" class="block bg-blue-500 text-white py-3 px-5 rounded-lg flex items-center justify-between hover:bg-blue-600 transition duration-300">
                <span class="font-semibold">Gérer les utilisateurs</span>
                <i class="fas fa-users text-2xl"></i>
            </a>

            <!-- Gérer les terrains -->
            <a href="{{ path('app_admin_terrains') }}" class="block bg-green-500 text-white py-3 px-5 rounded-lg flex items-center justify-between hover:bg-green-600 transition duration-300">
                <span class="font-semibold">Gérer les terrains</span>
                <i class="fas fa-map-marker-alt text-2xl"></i>
            </a>

            <!-- Gérer les réservations -->
            <a href="{{ path('app_admin_reservation') }}" class="block bg-purple-500 text-white py-3 px-5 rounded-lg flex items-center justify-between hover:bg-purple-600 transition duration-300">
                <span class="font-semibold">Gérer les réservations</span>
                <i class="fas fa-calendar-check text-2xl"></i>
            </a>

            <!-- Voir les statistiques -->
            <a href="{{ path('app_admin_statistics') }}" class="block bg-yellow-500 text-white py-3 px-5 rounded-lg flex items-center justify-between hover:bg-yellow-600 transition duration-300">
                <span class="font-semibold">Voir les statistiques</span>
                <i class="fas fa-chart-line text-2xl"></i>
            </a>
        </div>
    </div>
</div>
{% endblock %}